{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "node16",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "moduleResolution": "node16"
  },
  "typedocOptions": {
    "entryPoints": ["index.ts"],
    "out": "docs",
    "emit": "both"
  },
  "exclude": ["**/*.test.ts", "dist/**/*"]
}
